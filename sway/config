client.focused #D8DEE9 #D8DEE9 #1c1c1c #ffffff #b0b0b0
#client.focused #333333 #60d7cd #1c1c1c #ffffff #60d7cd
client.unfocused #3b4252 #3b4252 #b0b0b0 #ffffff #3b4252


workspace_layout tabbed

titlebar_padding 6 5

font SauceCodePro Bold 14

default_border pixel  3
hide_edge_borders --i3 smart



#terminal
set $term foot

#exec chromium with wayland flag
for_window [app_id="chromium"] move container to workspace 1
exec chromium --enable-features=UseOzonePlatform --ozone-platform=wayland
workspace number 2
exec $term -c /home/hi/.config/foot/nord.ini

#mod key
set $mod Mod4

set $right r
set $left s


# Default wallpaper (more resolutions are available in /usr/share/backgrounds/sway/)
output * bg /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png fill

### Input configuration
#
   input "2:14:SynPS/2_Synaptics_TouchPad" {
       dwt enabled
       tap enabled
       natural_scroll enabled
       middle_emulation enabled
   }

### Key bindings
#
# Basics:
	#Screenshot
    bindsym Print exec grim - | wl-copy 
    #audio
    bindsym XF86AudioMute exec amixer -q set Master toggle
    bindsym XF86AudioLowerVolume exec amixer -q set Master 5%-
    bindsym XF86AudioRaiseVolume exec amixer -q set Master 5%+

    #copy and paste

    # Start a terminal
    bindsym $mod+a exec $term -c /home/hi/.config/foot/nord.ini

    # Start wofi
    bindsym $mod+d exec wofi --insensitive --show drun

    # Kill focused window
    bindsym $mod+h kill

    # Drag floating windows by holding down $mod and left mouse button.
    # Resize them with right mouse button + $mod.
    # Despite the name, also works for non-floating windows.
    # Change NORMAl to inverse to use left mouse button for resizing and right
    # mouse button for dragging.
    floating_modifier $mod normal

    # Reload the configuration file
    bindsym $mod+Shift+c reload

    # Exit sway (logs you out of your Wayland session)
    bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'
#
# Moving around:
    # Bring browser to current workspace in vertical split
    bindsym $mod+l exec fish ~/.config/fish/functions/browser_to_workspace.fish

    # Move your focus around
    bindsym $mod+$left focus left
    bindsym $mod+$right focus right
    # Or use $mod+[up|down|left|right]
    bindsym $mod+Left focus left
	bindsym $mod+Right focus right


	bindsym $mod+mod5+$right move right
	bindsym $mod+mod5+$left move left

	bindsym $mod+mod5+Left move left
	bindsym $mod+mod5+Down move down
	bindsym $mod+mod5+Up move up
	bindsym $mod+mod5+Right move right

	bindsym $mod+v splith
	bindsym $mod+mod3+v layout toggle splith tabbed


	# Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+space floating toggle
    # Swap focus between the tiling area and the floating area
    #bindsym $mod+e workspace back_and_forth
	bindsym $mod+b fullscreen
    bindsym $mod+p focus parent
    bindsym $mod+Shift+minus move scratchpad
    bindsym $mod+minus scratchpad show

#
#
# Workspaces:
#
    # Switch to workspace
    bindsym $mod+g workspace number 1
    bindsym $mod+m workspace number 2
    bindsym $mod+f workspace number 3
    bindsym $mod+w workspace number 4
    bindsym $mod+5 workspace number 5
    bindsym $mod+6 workspace number 6
    bindsym $mod+7 workspace number 7
    bindsym $mod+8 workspace number 8
    bindsym $mod+9 workspace number 9
    bindsym $mod+0 workspace number 10

    # Move focused container to workspace
    bindsym $mod+mod5+g move container to workspace number 1 
    bindsym $mod+mod5+m move container to workspace number 2
    bindsym $mod+mod5+f move container to workspace number 3
    bindsym $mod+mod5+w move container to workspace number 4
    bindsym $mod+Shift+5 move container to workspace number
    bindsym $mod+Shift+6 move container to workspace number 
    bindsym $mod+Shift+7 move container to workspace number 
    bindsym $mod+Shift+8 move container to workspace number 
    bindsym $mod+Shift+9 move container to workspace number 
    bindsym $mod+Shift+0 move container to workspace number 

    #bindsym $mod+n workspace next
    #bindsym $mod+t workspace prev
    # Note: workspaces can have any name you want, not just numbers.
    # We just use 1-10 as the default.

# Resizing containers:
#
mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $right resize grow width 10px

    # Ditto, with arrow keys
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}



