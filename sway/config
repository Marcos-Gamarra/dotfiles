# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
input * {
	xkb_layout "custom, us"
	xkb_variant "dvp, intl"
	repeat_rate 50
	repeat_delay 400 
	tap enable
    #next keyboard layout with caps lock
    xkb_options grp:caps_toggle
}

bar {
    swaybar_command waybar
}

